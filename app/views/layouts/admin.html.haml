%html

  %head
    %title Alvarocanovas
    = stylesheet_link_tag  "jquery/jquery-ui-1.8.4.custom", 'compiled/admin'
    = javascript_include_tag :defaults, 'lib/tiny_mce/tiny_mce', 'lib/jquery.tinymce', 'lib/itkin/ajax_multipart_form', 'lib/itkin/itkin.ajax_accordion', 'lib/itkin/sortable_accordion', 'admin'
    = csrf_meta_tag

  %body

    #page

      #header
        %h1 Interface d'administration

        #current_user_links
          - if user_signed_in?
            = current_user.email
            = link_to "Log out", destroy_user_session_path

      #flash
        .notice= notice
        .alert= alert

      #page_content
        = render :layout => "layouts/admin_tabs" do
          = yield