!!! HTML5
%html

  %head
    %title Alvarocanovas
    = favicon_link_tag('/favicon.png', :type => "image/png")
    = stylesheet_link_tag 'compiled/application.css', :cache => 'application_all', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag :defaults, 'gallery', 'website', :cache => 'application_all'
    = csrf_meta_tag 
    
  %body

    #page
      %h1
        Alvaro Canovas
        = link_to (yield(:title).blank? ? "Photography" : yield(:title)), root_url, :remote => true, :class=>'link_to_root' 

      #menu
        %h2
          %span Menu

        %ul#main_menu_list

          = render :layout => 'layouts/menu_link', :locals => { :link =>  link_to("Editorial", categories_path, :remote => true) } do
            - Category.where(:type=> nil).each do |category|
              %li
                = link_to category.title, category_path(category), :remote => true

          = render :layout => 'layouts/menu_link', :locals => { :link =>  link_to("Corporate/Advertising", categories_path, :remote => true)} do
            - Client.all.each do |client|
              %li
                = link_to client.title, category_pictures_path(client), :remote => true

          = render :layout => 'layouts/menu_link', :locals => { :link =>  link_to("Publications", publications_path, :remote => true)} do
            = ''

          = render :layout => 'layouts/menu_link', :locals => { :link =>  link_to("Multimedia", videos_path, :remote => true) } do
            = ''
          = render :layout => 'layouts/menu_link', :locals => { :link =>  link_to("Current Work", content_path(Content::CURRENT_WORK), :remote => true)} do
            = ''

          = render :layout => 'layouts/menu_link', :locals => { :link =>  link_to("Bio", content_path(Content::BIO), :remote => true)} do
            = ''

          = render :layout => 'layouts/menu_link', :locals => { :link =>  link_to("Contact", contact_path, :remote => true )} do
            = ''

      #content
        = yield

      #footer
        = link_to "version francaise", "#", :class=> "version_change"
        = social_icons(:size => 20) do |icon|
          = icon.twitter
          = icon.facebook
        