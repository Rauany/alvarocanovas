%div{ :id => "category_#{category.id}", :class=>"category"}

  .header

    %span.actions
      = link_to "Editer", edit_admin_category_path(category), :class => 'edit_category', :method => :get, :remote => true
      = link_to "Supprimer", admin_category_path(category), :class => "delete_category", :method => :delete, :remote => true
      = link_to "Ajouter une photographie", new_admin_category_picture_path(category), :class => "add_picture", :remote => true

    = yield

  .content
    = render :partial => 'admin/pictures/index', :locals => { :category => category, :pictures => category.pictures }
