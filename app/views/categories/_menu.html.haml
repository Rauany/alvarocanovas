%div{ :id => "category_#{@category.id}_menu", :class=> "#{@category.class.name.downcase} menu "}



  - if @category.type.nil? and @pictures

    %h3= @category.title

    %ul
      %li#galleria_caption= raw "&nbsp;"
      %li#galleria_controls
      %li#galleria_fullscreen
      %li= link_to t("overview"), category_path(:id => @category), :remote => true

      -#- if params[:controller] == "categories"
      -#  %li= link_to "Full Screen", "#", :id => "fullScreen"
    .line

  - elsif not @category.type.nil?

    = link_to image_tag(@category.image.url(:large), :alt => ""), "#{@category.link}", :target => '_blank', :title => "Cliquer ici pour acc√©der au site web de #{@category.title}"


